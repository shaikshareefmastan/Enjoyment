pipeline {
   agent any
   stages {
      stage('git checkout') {
         steps {
            git 'https://github.com/shaikshareefmastan/Enjoyment.git'
         }
       }
      stage('Build application') {
         steps {
		withDockerContainer(image: "shareefmastan/seleniumstandalone-debug_vnc:1.0", args: "-p 4444:4444 -p 5900:5900"){
           script{
                               sh "pwd"
                               sh "ls -la"
                               sh "mvn clean package -DskipTests"
            dir('target'){
                           sh  "java -cp container-test.jar:libs/* -DseleniumHubHost=localhost -Dbrowser=chrome org.testng.TestNG ../suite/search-module.xml"
                          }
			
                    }
                				
            }
            
         }
      }
   }
}
